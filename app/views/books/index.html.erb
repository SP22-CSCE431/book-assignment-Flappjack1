<p id="notice"><%= notice %></p>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th colspan="1"></th>
      <th>Author</th>
      <th colspan="1"></th>
      <th>Price</th>
      <th colspan="1"></th>
      <th>Published Date</th>
      <th colspan="1"></th>
    </tr>
    
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td colspan="1"></td>
        <td><%= book.author %></td>
        <td colspan="1"></td>
        <td><%= book.price %></td>
        <td colspan="1"></td>
        <td><%= book.published_date %></td>
        <td colspan="1"></td>
        <td><%= link_to 'Show', book %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Destroy', delete_book_path(book) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

