<h1>Delete Book</h1>

<%= form_for( @book , :method => :delete) do |f| %>

    <p>
    Are you sure you want to delete this book?
    </p>
    <p><%=@book.title %></p>
    <p><%=@book.author %></p>
    <p><%=@book.price %></p>
    <p><%=@book.published_date %></p>
    <p><%= f.submit 'Delete' %></p>
    
    <%= link_to 'Back', books_path %>
    
<% end %>